\usepackage{customtex}

\usepackage{scalerel}



% general layout options
\KOMAoptions{
	twoside       = semi,
	open          = any,
	DIV           = 8,
	fontsize      = 12pt,
	chapterprefix = true,
	numbers       = noenddot
}



% settings for numbering of sectioning commands
% and for their inclusion in the table of contents
\setcounter{secnumdepth}{1}
\setcounter{tocdepth}{2}



% printing of counters
\renewcommand{\theeverything}{\thechapter.\Alph{everything}}



% configuration of commutative diagrams
\tikzcdset{
	diagrams = {
		sep = large
	}
}


% change the customtex command for bold mathematics
% from \mathbb to \mathbf
\renewcommand{\boldfont}{\mathbf}


%%% categories
% fonts
\newcommand{\catfont}{\mathsf}
\newcommand{\genericcatfont}{\mathsf}
% fixed categories
\newcommand{\Grp}{\catfont{Grp}}
\newcommand{\Top}{\catfont{Top}}
% categories with an argument
\newcommand{\Vect}[1]{\catfont{Vect}_{#1}}
% commonly used cases of the above
\newcommand{\Vectk}{\Vect{\kf}}
% for use in the document
\newcommand{\cat}{\genericcatfont}


%%% Stuff

% formatting
\newcommand{\basis}{\mathcal}
\newcommand{\subbasis}{\mathcal}
\AtBeginDocument{
	\renewcommand{\top}{\mathcal}
}

% special elements
\renewcommand{\id}{\operatorname{id}}

% the symbol is too bold and should be replaced by a better solution
% the size and vertical position is adjusted to fit with \sum and \prod
\newcommand{\bigast}{\mathop{\smash{\raisebox{-0.45em}{\scaleobj{2.58}{\ast}}}}}
